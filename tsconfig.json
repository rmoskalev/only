{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@styles/*": ["src/styles/*"]
    },
    "outDir": "dist",
    "lib": ["dom", "esnext"],
    "sourceMap": true,
    "strict": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "global.d.ts"],
  "exclude": ["node_modules", "dist", "coverage", "webpack.*.ts"]
}
